<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">


    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.sololearntesttask.MainFragment">
        <action
            android:id="@+id/action_to_reposDetailsFragment"
            app:destination="@id/reposDetailsFragment">

            <argument
                android:name="login"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="name"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="position"
                app:argType="Int"
                app:nullable="true" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/reposDetailsFragment"
        android:name="com.example.sololearntesttask.ReposDetailsFragment">

        <argument
            android:name="login"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="position"
            app:argType="Int"
            app:nullable="true" />
    </fragment>

</navigation>